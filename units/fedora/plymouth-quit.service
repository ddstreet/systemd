[Unit]
Description=Terminate Plymouth Boot Screen
Before=getty@tty1.service
After=dev-tty1.device rc-local.service

[Service]
ExecStart=-/usr/bin/plymouth quit
Type=oneshot

[Install]
WantedBy=multi-user.target
